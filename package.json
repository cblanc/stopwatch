{
  "name": "@cablanchard/stopwatch",
  "version": "0.0.2",
  "description": "stopwatch",
  "repository": {
    "type": "git",
    "url": "git@github.com:cblanc/stopwatch"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "npm run lint && NODE_ENV=test node_modules/.bin/nyc node_modules/.bin/mocha",
    "lint": "node_modules/.bin/tslint -c tslint.json -p tsconfig.json lib/**/*.ts",
    "build": "npm run lint && node_modules/.bin/tsc",
    "prepublish": "npm run build"
  },
  "mocha": {
    "spec": "tests/*.ts",
    "exit": true,
    "fullTrace": true,
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ]
  },
  "nyc": {
    "include": [
      "lib/**/*.ts"
    ],
    "exclude": [
      "dist/*"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  },
  "engines": {
    "node": ">=8.0"
  },
  "author": "cblanc",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "~4.1.4",
    "@types/mocha": "~5.2.4",
    "@types/node": "~11.13.0",
    "chai": "~4.1.2",
    "mocha": "~6.1.1",
    "nyc": "~13.1.0",
    "source-map-support": "~0.5.6",
    "ts-node": "~8.0.2",
    "tslint": "~5.15.0",
    "typings": "~2.1.1",
    "typescript": "~3.4.1"
  },
  "dependencies": {}
}
